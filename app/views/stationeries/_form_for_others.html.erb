
<%= form_for(@stationery) do |f| %>

  <% if @stationery.errors.any? %>
    <ul>
      <% @stationery.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

<div class="row edit-form-row">
  <div class="col-md-2">
  </div>
  <div class="col-md-6">
    <div class="form-group">
    <span class="text-muted"><%= f.label :name%></span>
    <%= f.text_field :name, class:"edit-form-group", :readonly => true%>
    </div>

    <div class="form-group">
    <span class="text-muted"><%= f.label :product_code%></span>
    <%= f.text_field :product_code, class:"edit-form-group", :readonly => true%>
    </div>

    <%= f.hidden_field :cupboard, :value => "Out" %>

    <div class="form-group">
    <span class="text-muted"><%= f.label "Item will be linked for user with id:"%></span>
    <%= f.text_field :user_id, :value => current_user.id, class:"edit-form-group", :readonly => true%>
    </div>

    <%= f.hidden_field :availability, :value => '0' %>

    <div class="form-group">
    <span class="text-muted"><%= f.label :consumable%></span>
    <%= f.check_box :consumable, {:disabled => true}%>
    </div>


    <%= f.submit "Take the item", class:"btn btn-primary btn-md" %>

<% end %>
</div>
<div class="col-md-4">
</div>
</div>

