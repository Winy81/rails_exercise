<h1>User#show</h1>

  <ul>
    <li><%= @user.id %></li>
    <li><%= @user.name %></li>
    <li><%= @user.email %></li>
    <li><%= @user.activity %></li>
  </ul>

<% if logged_in?(:admin) %>
  <%= link_to "Edit user", edit_user_path(@user) %>
  <%= link_to "Back For User List", users_path %></br>
  <%= link_to "Back For Item List", stationeries_path %></br>
<% else %>
  <%= link_to "Back For Item List", stationeries_path %>
<% end %>
